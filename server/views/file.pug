doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    link(rel="stylesheet", href="/public/prisma-highlight.css")
    title Document

    style.
      body {
        font-family: sans-serif;
        margin: 0;
      }
      .container {
        display: flex;
        justify-content: space-between;
        padding: 2rem 4rem;
      }
      .content {
        max-width: 1000px;
        width: 100%;
      }
      .content > div {
        overflow-x: auto;
      }

      @media (max-width: 768px) {
        .container {
          padding: 1rem 0;
        }
      }
  body 
    .container
      div
      .content
        | !{content}
