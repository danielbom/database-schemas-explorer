doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Document

    style.
      * {
        box-sizing: border-box;
      }
      body {
        font-family: sans-serif;
        margin: 0;
      }
      .container {
        display: flex;
        justify-content: center;
        padding: 1rem 4rem;
      }
      .content {
        max-width: 1000px;
      }
      .pagination {
        display: flex;
        justify-content: space-between;
      }
      .list {
        //- list-style: none;
        padding: 0;
      }
      .list li a {
        display: block;
        padding: 0.75rem 1rem;
        border: 1px solid #ccc;
        border-radius: 0.25rem;
        max-width: 100%;
      }
  body 
    .container
      .content
        ol.list
          each file in files
            li
              a(href="/html/file/" + file.id, target="_blank") !{file.full_name} - !{file.path}

        div.pagination
          if page > 1
            a(href="/html/list-files?page=" + (page - 1)) Previous
          else
            span Previous
          
          span Page !{page} of !{pages}

          if page < pages
            a(href="/html/list-files?page=" + (page + 1)) Next
          else
            span Next

    //- add start to ordered list with javascript
    script.
      document.querySelector('.list').setAttribute('start', #{start});
